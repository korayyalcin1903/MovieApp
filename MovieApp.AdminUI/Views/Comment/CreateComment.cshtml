@model CreateCommentDto

@{
    ViewData["Title"] = "CreateComment";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="chart-box">
    <h4>Comment Create</h4>
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            <strong>Hata!</strong> Lütfen aşağıdaki hataları düzeltin:
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <div class="row">
        <form method="post">
            <div class="col-md-6">
                <div class="form-group has-feedback">
                    <label class="control-label">Name</label>
                    <input type="text" class="form-control" asp-for="Name" placeholder="Name">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group has-feedback">
                    <label class="control-label">Email</label>
                    <input type="text" class="form-control" asp-for="Email" placeholder="Email">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group has-feedback">
                    <label class="control-label">Rating</label>
                    <input type="number" min="0" max="5" class="form-control" asp-for="Rating" placeholder="Rating">
                </div>
            </div>
            <div class="col-md-6">
                <label class="control-label">Movie</label>
                <select class="form-control" asp-for="MovieId" name="MovieId">
                    <option class="my-2">Seçiniz</option>
                    @foreach (var movie in ViewBag.Movies)
                    {
                        <option value="@movie.Id" class="my-2">@movie.Title</option>
                    }
                </select>
            </div>
            <div class="col-md-12">
                <div class="form-group has-feedback">
                    <label class="control-label">Description</label>
                    <textarea class="form-control" id="placeTextarea" rows="3" asp-for="Description" placeholder="Description"></textarea>
                </div>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </form>
    </div>
</div>

