@model List<GetAllCastDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="chart-box">
    <div class="d-flex justify-content-between">
        <div class="col-4"><h4>Cast List</h4></div>
        <div class="col-4"><a href="/Cast/CreateCast" class="btn btn-success">Create</a></div>
    </div>
    <div class="bs-example" data-example-id="bordered-table">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>FullName</th>
                    <th>Image</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var cast in Model)
                {
                    <tr>
                        <th>@cast.Id</th>
                        <td>@cast.FullName</td>
                        <td><img src=@cast.ImgUrl width="50px" height="50px"/></td>
                        <td>
                            <a href="/Cast/Update/@cast.Id" class="btn btn-warning">Edit</a>
                            <a href="/Cast/Delete/@cast.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>


