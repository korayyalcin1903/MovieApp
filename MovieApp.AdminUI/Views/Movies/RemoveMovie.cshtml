@model GetByIdMovieDto

@{
    ViewData["Title"] = "RemoveMovie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h2>Remove Movie</h2>
    <h4>#@Model.Id - @Model.Title silmek istediğinizden emin misiniz?</h4>
    <div class="d-inline-flex gap-2">
        <form asp-action="RemoveMovie" asp-controller="Movies" method="post">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger">Evet</button>
            <a  href="/" class="btn btn-warning">Hayır</a>
        </form>
    </div>
</div>

