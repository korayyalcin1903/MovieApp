@model List<GetAllCategoryDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="chart-box">
    <div class="d-flex justify-content-between">
        <div class="col-4"><h4>Category List</h4></div>
        <div class="col-4"><a href="/Category/CreateCategory" class="btn btn-success">Create</a></div>
    </div>
    <div class="bs-example" data-example-id="bordered-table">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>CategoryName</th>
                    <th>Image</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <th>@category.Id</th>
                        <td>@category.CategoryName</td>
                        <td><img src="@category.CategoryImgUrl" style="width:50px; height:50px" /></td>
                        <td>
                            <a href="/Category/Update/@category.Id" class="btn btn-warning">Edit</a>
                            <a href="/Category/Delete/@category.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

