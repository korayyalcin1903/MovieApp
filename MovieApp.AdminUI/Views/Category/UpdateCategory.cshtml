@model UpdateCategoryDto

@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="chart-box">
    <h4>Movie Update</h4>
    <input type="text" class="form-control" value="@Model.Id" asp-for="Id" readonly />
    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger" role="alert">
            <strong>Hata!</strong> Lütfen aşağıdaki hataları düzeltin:
            <ul>
                @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                {
                    <li>@error.ErrorMessage</li>
                }
            </ul>
        </div>
    }

    <div class="row">
        <form method="post">
            <div class="col-md-6">
                <div class="form-group has-feedback">
                    <label class="control-label">Category Name</label>
                    <input type="text" class="form-control" asp-for="CategoryName" placeholder="Category Name">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group has-feedback">
                    <label class="control-label">Category Img Url</label>
                    <input type="text" class="form-control" asp-for="CategoryImgUrl" placeholder="Category Img Url">
                </div>
            </div>
            <div class="col-md-12">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </form>
    </div>

</div>


<div class="chart-box">
    <div class="d-flex justify-content-between">
        <div class="col-4"><h4>Movie List</h4></div>
    </div>
    <div class="bs-example" data-example-id="bordered-table">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Title</th>
                    <th>ImageUrl</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var movie in ViewBag.Movies)
                {
                    <tr>
                        <th>@movie.Id</th>
                        <td>@movie.Title</td>
                        <td><img src="@movie.ImageUrl" style="width:50px; height:50px" /></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

